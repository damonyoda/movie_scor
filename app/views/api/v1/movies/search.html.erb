<%= form_with url: search_api_v1_movies_path, method: :get, local: true do |f| %>
  <div>
    <%= f.label :actor, "Search for actor:" %>
    <%= f.text_field :actor %>
  </div>
  <div>
    <%= f.submit "Search" %>
  </div>
<% end %>

<% if @actor %>
  <h2>Movies featuring <%= @actor.name %>:</h2>
  <% if @movies.any? %>
    <ul>
      <% @movies.each do |movie| %>
        <li><%= movie.name %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No movies found for <%= @actor.name %>.</p>
  <% end %>
<% else %>
  <p>No actor found with the name <%= params[:actor] %>.</p>
<% end %>
